<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="turbolinks-cache-control" content="no-preview">
    <meta name="csrf-token" content="<%= get_csrf_token() %>">
    <meta name="csrf-param" content="_csrf_token">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Checkout App</title>

    <link data-turbolinks-track="reload" rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
    <script data-turbolinks-track="reload" src="https://use.fontawesome.com/f024536808.js"></script>
    <script data-turbolinks-track="reload" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script data-turbolinks-track="reload" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ujs/1.2.2/rails.min.js"></script>
    <script data-turbolinks-track="reload" src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </head>
  <body>
    <section class="section">
      <%= if info = get_flash(@conn, :info) do %>
      <div class="notification is-info">
        <button class="delete"></button>
        <%= info %>
      </div>
      <% end %>

      <%= if error = get_flash(@conn, :error) do %>
      <div class="notification is-danger">
        <button class="delete"></button>
        <%= error %>
      </div>
      <% end %>

      <%= render @view_module, @view_template, assigns %>
    </section>
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
